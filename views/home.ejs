<%- include('partials/_header.ejs') %>

<div class="home-container">
    <h1>Welcome to the Community Portal</h1>
    <p>Your source for local news and updates.</p>

    <div class="news-list">
        <% if (newsPosts.length > 0) { %>
            <% newsPosts.forEach(function(post) { %>
                <div class="news-post">
                    <a href="/news/<%= post._id %>"><h2><%= post.title %></h2></a>
                    <p><%= post.content.substring(0, 150) %>...</p>
                </div>
            <% }); %>
        <% } else { %>
            <p>There are no news posts yet. Create a new one!</p>
        <% } %>
    </div>
</div>

