<%- include('partials/_header.ejs') %>

<h1>Community News</h1>

<div class="news-list">
    <% newsPosts.forEach(function(post) { %>
        <div class="news-post">
            <h2><%= post.title %></h2>
            <p><%= post.content %></p>
            <a href="/news/edit/<%= post._id %>">Edit</a>
            <form action="/news/<%= post._id %>?_method=DELETE" method="POST" style="display: inline;">
                <button type="submit">Delete</button>
            </form>
        </div>
    <% }); %>
</div>

<%- include('partials/_footer.ejs') %>